@model IEnumerable<FiveP.Models.Admin_Notification>

@{
    ViewBag.Title = "NotificationAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int count = 1;

}

<div class="container-fluid content-top-gap">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Admin thông báo</li>
        </ol>
    </nav>
    <div class="welcome-msg pt-3 pb-4">
        <h1>Hi <span class="text-primary">John</span>, Có @Model.Count() Admin thông báo cho người dùng</h1>
        <p>Very detailed & featured admin.</p>
    </div>

    <!-- statistics data -->
    <div class="statistics">
        <div class="row">
            <div class="col-xl-12">
                <input type="text" class="form-control" placeholder="Nhập từ cần tìm.." />
            </div>

            <div class="col-xl-12 table-responsive">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.admin_notification_content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.admin_notification_datecreate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.admin_notification_status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.admin_notification_content)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.admin_notification_datecreate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.admin_notification_status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.admin_notification_id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.admin_notification_id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.admin_notification_id })
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>
    </div>

</div>


