@model IEnumerable<FiveP.Models.Show_Activate_Reply_Post>

@using System.Text.RegularExpressions;

@{
    ViewBag.Title = "ShowActivateReplyPost";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int count = 1;

}

<div class="container-fluid content-top-gap">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb my-breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page"> Hiển thị hoạt động trả lời câu hỏi</li>
        </ol>
    </nav>
    <div class="welcome-msg pt-3 pb-4">
        <h1>Hi <span class="text-primary">John</span>, Có @Model.Count() câu trả lời người dùng muốn hiển thị hoạt động</h1>
        <p>Very detailed & featured admin.</p>
    </div>

    <!-- statistics data -->
    <div class="statistics">
        <div class="row">
            <div class="col-xl-12">
                <input type="text" class="form-control" placeholder="Nhập từ cần tìm.." />
            </div>

            <div class="col-xl-12 table-responsive">

                <table class="table">
                    <tr>
                        <th>
                            Stt
                        </th>
                        <th>
                            Người dùng
                        </th>
                        <th>
                            Trả lời
                        </th>
                        <th>
                            Đã đọc
                        </th>
                        <th>
                            Ngày <a href="#"><i class="fas fa-long-arrow-alt-up"></i></a><a href="#"><i class="fas fa-long-arrow-alt-down"></i></a>
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.user_nicename)
                            </td>
                            <td style="width:40%">
                                @if (item.Reply_Post.reply_post_content.Length > 100)
                                {
                                    @WebUtility.HtmlDecode(Regex.Replace(item.Reply_Post.reply_post_content.Substring(0, 100), "<[^>]*(>|$)", string.Empty)) <span>...</span>

                                }
                                else
                                {
                                    @WebUtility.HtmlDecode(Regex.Replace(item.Reply_Post.reply_post_content, "<[^>]*(>|$)", string.Empty)) <span>...</span>
                                }

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.show_activate_reply_post_readed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.show_activate_reply_post_datetime)
                            </td>
                            <td>
                                <a href="#"><i class="far fa-edit"></i></a>|
                                <a href="#"><i class="far fa-eye"></i></a> |
                                <a href="#"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        count++;
                    }

                </table>

            </div>

        </div>
    </div>

</div>


