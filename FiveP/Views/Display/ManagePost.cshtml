@using FiveP.Models;
@using System.Text
@model List<Post>
@{
    ViewBag.Title = "ManagePost";
    Layout = "~/Views/Shared/_LayoutCenter.cshtml";

    User user = (User)Session["user"];
    FivePEntities db = new FivePEntities();
    String checkeds = "checked";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>
<style>
    .table td, .table th {
        font-size: inherit;
    }

    .custom-toggle-slider:before {
        bottom: auto
    }
    .navbar-vertical .navbar-nav .nav-link {
        font-size: inherit;
            }
    body {
        font-family:Arial;
    }
    h1, h2, h3, h4, h5 {
        font-family: Lato,'Helvetica Neue',Arial,Helvetica,sans-serif;
    }
</style>
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Quản lý câu hỏi</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý câu hỏi</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                    <a href="#" class="btn btn-sm btn-neutral">Filters</a>
                </div>
            </div>
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-4 col-md-6">
                    <div class="card card-stats">
                        <!-- Card body -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Câu hỏi</h5>
                                    <span class="h2 font-weight-bold mb-0">@Model.Count()</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                                        <i class="fas fa-question"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 mb-0 text-sm">
                                <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                                <span class="text-nowrap">Since last month</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="card card-stats">
                        <!-- Card body -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Trả lời</h5>
                                    <span class="h2 font-weight-bold mb-0">@Model.Sum(n=>n.post_sum_reply)</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                                        <i class="ni ni-curved-next"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 mb-0 text-sm">
                                <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                                <span class="text-nowrap">Since last month</span>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6">
                    <div class="card card-stats">
                        <!-- Card body -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Comment</h5>
                                    <span class="h2 font-weight-bold mb-0">@Model.Sum(n=>n.post_sum_comment)</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                                        <i class="far fa-comments"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 mb-0 text-sm">
                                <span class="text-success mr-2"><i class="fa fa-arrow-up"></i> 3.48%</span>
                                <span class="text-nowrap">Since last month</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0"><i class="fas fa-list"></i> Danh sách câu hỏi của bạn...</h3>
                </div>

                <div class="float-right" style="padding: 10px;">
                    <a href="#" style="margin-left: 5px;">Nổi tiếng &nbsp;&nbsp;&nbsp; </a>
                    <a href="#" style="margin-left: 5px;">Trả lời &nbsp;&nbsp;&nbsp;</a>
                    <span style="margin-left: 5px;"> Sắp xếp :</span>

                    <div class="ui dropdown">
                        <i class="filter icon"></i>
                        <span class="text">Mới nhất</span>
                        <div class="menu">
                            <div class="ui icon search input">
                                <i class="search icon"></i>
                                <input type="text" placeholder="Tìm...">
                            </div>
                            <div class="divider"></div>
                            <div class="header">
                                <i class="tags icon"></i>
                                Thẻ
                            </div>
                            <div class="scrolling menu">
                                <div class="item">
                                    <div class="ui orange empty circular label"></div>

                                    1
                                </div>
                                <div class="item">
                                    <div class="ui black empty circular label"></div>

                                    2
                                </div>
                                
                            </div>
                        </div>
                    </div>

                    <a href="#" style="margin-left: 5px;">&nbsp;&nbsp;&nbsp; <i class="fas fa-undo-alt"></i></a>

                </div>

                <div class="form-group mb-0">
                    <div class="input-group input-group-alternative input-group-merge">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                        </div>
                        <input class="form-control" placeholder="Tìm ..." type="text">
                    </div>
                </div>

                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Tiêu đề</th>
                                <th scope="col" class="sort border-left" data-sort="budget">Trả lời</th>
                                <th scope="col" class="sort" data-sort="status">Đánh giá</th>
                                <th scope="col"> Lượt xem</th>
                                <th scope="col" class="sort" data-sort="completion"> Trạng thái</th>
                                <th scope="col"> Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody class="list">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">
                                        <div class="media align-items-center">
                                            <a class="mr-2">

                                                <center><i class="fa fa-chevron-up" style="font-size:200%"></i></center>
                                                <center>
                                                    @{
                                                        List<Rate_Post> listRatePostT = db.Rate_Post.Where(n => n.post_id == item.post_id && n.rate_post1 == true).ToList();
                                                        List<Rate_Post> listRatePostF = db.Rate_Post.Where(n => n.post_id == item.post_id && n.rate_post1 == false).ToList();
                                                        int intCoutT = listRatePostT.Count();
                                                        int intCoutF = listRatePostF.Count();
                                                        int intDivided = intCoutT - intCoutF;
                                                    }
                                                    <p>@intDivided</p>
                                                </center>
                                                <center><i class="fa fa-chevron-down" style="font-size:200%"></i></center>


                                            </a>
                                            <div class="media-body">
                                                <div>
                                                    @if (item.post_title != null)
                                                    {
                                                        if (item.post_title.Length > 40)
                                                        {
                                                            <span>@item.post_title.Substring(0, 40) ...</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@item.post_title ..</span>
                                                        }
                                                    }
                                                </div>
                                                <span class="name mb-0 text-sm">
                                                    @if (item.post_content != null)
                                                    {
                                                        if (Html.Raw(item.post_content).ToString().Length > 50)
                                                        {
                                                            <span>@Html.Raw(item.post_content.Substring(0, 50)) ..</span>
                                                        }
                                                        else
                                                        {
                                                            <span>@Html.Raw(item.post_content) ..</span>
                                                        }
                                                    }
                                                </span>

                                                <div class="d-flex align-items-center">
                                                    @{ 
                                                        List<Rate_Post> rate_Posts = db.Rate_Post.Where(n => n.post_id == item.post_id).ToList();
                                                        List<Rate_Post> rate_Posts1 = db.Rate_Post.Where(n => n.post_id == item.post_id && n.rate_post1 == true).ToList();
                                                        float coutRate_Posts = rate_Posts.Count();
                                                        float countrate_Posts1 = rate_Posts1.Count();
                                                        float medium;
                                                        if (coutRate_Posts != 0)
                                                        {
                                                            medium = (countrate_Posts1 / coutRate_Posts) * 100;
                                                        }
                                                        else
                                                        {
                                                            medium = 0;
                                                        }

                                                    }
                                                    <span class="completion mr-2">Tỉ lệ vow tốt : @medium%</span>
                                                    <div>
                                                        <div class="progress">
                                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @medium%;"></div>

                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </td>
                                    <td class="budget border-left">
                                        <i class="fas fa-reply"></i> @item.post_sum_reply
                                    </td>
                                    <td class="budget">
                                        <i class="far fa-star"></i> @rate_Posts.Count()
                                    </td>
                                    <td class="budget">
                                        <i class="far fa-eye"></i> @item.post_view
                                    </td>


                                    <td>
                                        <label class="custom-toggle">
                                            <input type="checkbox" @if(item.post_activate == true){ @checkeds}>
                                            <span class="custom-toggle-slider rounded-circle"></span>
                                        </label>
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="@Url.Action("IndexDetailQuestion","DetailQuestion", new { id = Convert.ToBase64String(Encoding.ASCII.GetBytes(item.post_id.ToString()))})"><i class="fas fa-info-circle"></i> Chi tiết</a>
                                                <a class="dropdown-item" href="@Url.Action("RecycleBinPost","Display", new { id = item.post_id})"><i class="far fa-trash-alt"></i> Xóa</a>
                                                <a class="dropdown-item" href="@Url.Action("IndexPostQuestion","PostQuestion", new { id = item.post_id})"><i class="fas fa-edit"></i>Sữa</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $('.ui.dropdown')
        .dropdown()
        ;
</script>
