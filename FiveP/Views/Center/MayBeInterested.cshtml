@using FiveP.Models;
@model List<Post>
<div class="card gedf-card">
    <div class="card-body">
        <h4 class="card-title">Top công nghệ khác</h4>
        @foreach (var item in Model)
        {
            if (item.post_title.Length > 60)
            {
                <div class="row">
                    <div class="col-2 mr--1">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="col-xl-10 ml--3">
                        @item.post_title.Substring(0, 60) ...
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-2 mr--1">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="col-xl-10 ml--3">
                        @item.post_title ..
                    </div>
                </div>
            }
        }
        <span style="font-size:28px">...</span>
    </div>
</div>

