@using FiveP.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<Post>
@{
    User user = (User)Session["user"];
    FivePEntities db = new FivePEntities();
    string active = "active";
    int i;
}
<!--- \\\\\\\Post-->
@foreach (var item in Model)
{
    <div class="card gedf-card" id="question">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-2">
                        <img class="rounded-circle" width="45" src="~/Content/LayoutCenter/ImgUser/user1.jpg" alt="">
                    </div>
                    <div class="ml-2">
                        <a href="#" class="h5 m-0">@item.User.user_nicename</a>
                        <div class="h7 text-muted">@item.User.user_vip_medal<i class="fab fa-galactic-senate" style="color:orangered;font-size:28px"></i> @item.User.user_gold_medal<i class="fas fa-medal" style="color:yellow"></i>  @item.User.user_silver_medal<i class="fas fa-medal" style="color:silver"></i>  @item.User.user_bronze_medal<i class="fas fa-medal" style="color:#e88d15"></i> </div>
                    </div>
                </div>
                <div>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                            <div class="h6 dropdown-header">Configuration</div>
                            <a class="dropdown-item" href="#">Save</a>
                            <a class="dropdown-item" href="#">Hide</a>
                            <a class="dropdown-item" href="#">Report</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body">
            <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i> @item.post_datecreated</div>
            <a class="card-link" href="#">
                <h5 class="card-title RutNganTieuDe">
                    @item.post_title.
                </h5>
            </a>

            <p class="card-text RutNganNoiDung">
                @Html.Raw(item.post_content)
            </p>
            <div>
                @{
                    List<Technology_Post> technology_Posts = db.Technology_Post.Where(n => n.post_id == item.post_id).ToList();
                }
                @foreach (var itemTechonology in technology_Posts)
                {
                    <span class="badge badge-primary">@itemTechonology.Technology.technology_name</span>
                }

            </div>
        </div>
        @{
            List<Reply_Post> ReplyPost = db.Reply_Post.Where(n => n.post_id == item.post_id).ToList();
        }
        <div class="card-footer">
            <a href="#" class="card-link"><i class="fa fa-gittip"></i>Nổi tiếng  @item.post_popular</a>
            <a href="#" class="card-link"><i class="fa fa-comment"></i> Trả lời @ReplyPost.Count()</a>
            <a href="#" class="card-link"><i class="fa fa-mail-forward"></i> Lượt xem @item.post_view</a>
        </div>
    </div>
}
<!-- Post /////-->
<div class="clearfix"></div>
<div class="row float-right">
    <!--Phân trang-->
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="@Url.Action("IndexCenter","Center",new { page = ViewBag.page-1})"><i class="fa fa-angle-left"></i></a>
            </li>
            @if (ViewBag.demCauHoi % ViewBag.size == 0)
            {
                for (i = 1; i <= ViewBag.demCauHoi / ViewBag.size; i++)
                {
                    <li class="page-item @if (ViewBag.page == i) {@active }">
                        <a class="page-link" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#question" href="@Url.Action("Hot","Center",new { page = i})" data-toggle="tooltip" data-placement="top" title="Tooltip on top" data-container="body" data-animation="true">@i</a>
                    </li>
                }
            }
            else
            {
                for (i = 1; i <= (ViewBag.demCauHoi / ViewBag.size) + 1; i++)
                {
                    <li class="page-item @if (ViewBag.page == i) {@active }">
                        <a class="page-link" href="@Url.Action("Hot","Center",new { page = i})">@i</a>
                    </li>
                }
            }

            <li class="page-item">
                <a class="page-link" href="@Url.Action("Hot","Center",new { page = ViewBag.page+1})"><i class="fa fa-angle-right"></i></a>
            </li>
        </ul>
    </nav>
</div>
<!--- \\\\\\\Post-->
