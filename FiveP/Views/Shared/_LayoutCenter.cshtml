                        <!-- Navigation -->
                        <ul class="navbar-nav mb-md-3">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ManagePost","Display")" target="_blank">
                                    
                                    <span class="nav-link-text">Câu hỏi</span>
                                </a>
