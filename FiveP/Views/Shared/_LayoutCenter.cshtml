                    <a class="navbar-brand" href="javascript:void(0)">
                        <img src="~/Content/LayoutCenter/img/brand/blue.png" class="navbar-brand-img" alt="...">
                    </a>
                </div>
                <div class="navbar-inner">
                    <!-- Collapse -->
                    <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                        <!-- Nav items -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("IndexCenter","Center")">
                                    <i class="far fa-question-circle text-orange"></i>
                                    <span class="nav-link-text">Câu hỏi?</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Member","Display")">
