                                                @{ 
                                                    List<Comment> comment = db.Comments.Where(n => n.user_id == user.user_id).ToList();

                                                }
                                                Tổng comment của bạn : @comment.Count()
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
