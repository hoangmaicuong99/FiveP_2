                                                    <div class="input-daterange">
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <textarea class="flatpickr range form-control" style="height:120px" placeholder="Sở thích công việc.."></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <small class="d-block text-uppercase font-weight-bold mb-3 text-left"><i class="fas fa-grin-hearts"></i> Sở thích cá nhân</small>
                                                    <div class="input-daterange">
                                                        <div class="form-group">
                                                            <div class="input-group">

                                                                <textarea class="flatpickr range form-control" style="height:120px" placeholder="Sở thích cá nhân.."></textarea>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <button type="button" class="btn btn-primary w-100"><i class="far fa-paper-plane"></i> Hoàn thành</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--đổi mật khẩu-->
                            <div class="h5 font-weight-300">


                                <i class="fas fa-lock"></i><i class="ni business_briefcase-24 mr-2"></i>&nbsp; ***********<a href="#" data-toggle="modal" data-target="#modal-form">&nbsp;&nbsp;<i class="fas fa-marker"></i></a>

                                <div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body p-0">
                                                <div class="card bg-secondary shadow border-0 mb-0">
                                                    <div class="card-body px-lg-5 py-lg-5">
                                                        <form role="form">
                                                            <div class="form-group">
                                                                <div class="input-group input-group-alternative">
                                                                    <div class="input-group-prepend">
